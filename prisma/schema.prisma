generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  title       String
  slug        String  @unique
  description String
  imageFront  String
  imageBack   String
  sizes       String  // e.g. "50g,100g,250g,500g"
  prices      String  // e.g. "20,40,90,180"
  category   String @default("Masala")
}

model Order {
  id             Int      @id @default(autoincrement())
  fullName       String
  phone          String
  alternatePhone String?
  pincode        String
  city           String
  landmark       String
  fullAddress    String
  addressType    String
  orderSummary   String
  status         String   @default("Pending") // âœ… New field!
  createdAt      DateTime @default(now())

}
